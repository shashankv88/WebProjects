@model LeaveManagement.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editing @Model.LeaveType.Name For @Model.Employee.FirstName @Model.Employee.LastName</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="EmployeeID" />
            <div class="form-group">
                <label asp-for="NumberofDays" class="control-label"></label>
                <input asp-for="NumberofDays" class="form-control" />
                <span asp-validation-for="NumberofDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="EmployeeID" />
    <a asp-action="Details" asp-route-id="@Model.EmployeeID">Back to List</a>
</div>

